<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5ecc1"
    tools:context=".Home">

    <Button
        android:id="@+id/btnmath"
        android:layout_width="0dp"
        android:layout_height="142dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/drawbutt"
        android:padding="69dp"
        android:text="MATH"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/btnsci"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="MATH" />

    <Button
        android:id="@+id/btnsci"
        android:layout_width="360dp"
        android:layout_height="151dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/drawbutt"
        android:padding="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62" />

    <Button
        android:id="@+id/mth"
        android:layout_width="88dp"
        android:layout_height="42dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:text="MATH"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnmath"
        app:layout_constraintEnd_toEndOf="@+id/btnmath"
        app:layout_constraintStart_toStartOf="@+id/btnmath"
        app:layout_constraintTop_toTopOf="@+id/btnmath" />

    <Button
        android:id="@+id/sci"
        android:layout_width="141dp"
        android:layout_height="42dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:text="SCIENCE"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnsci"
        app:layout_constraintEnd_toEndOf="@+id/btnsci"
        app:layout_constraintStart_toStartOf="@+id/btnsci"
        app:layout_constraintTop_toTopOf="@+id/btnsci" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="223dp"
        android:layout_height="234dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/border" />

</android.support.constraint.ConstraintLayout>